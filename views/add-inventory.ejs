<h1>Add New Inventory Item</h1>

<p><%= messages %></p>

<form method="post" action="/inventory/add-inventory">

  <label>Make</label>
  <input type="text" name="make" value="<%= invData?.make || '' %>" required>

  <label>Model</label>
  <input type="text" name="model" value="<%= invData?.model || '' %>" required>

  <label>Description</label>
  <textarea name="description"><%= invData?.description || '' %></textarea>

  <label>Year</label>
  <input type="number" name="year" value="<%= invData?.year || '' %>" required>

  <label>Price</label>
  <input type="number" name="price" value="<%= invData?.price || '' %>" required>

  <label>Miles</label>
  <input type="number" name="miles" value="<%= invData?.miles || '' %>" required>

  <label>Color</label>
  <input type="text" name="color" value="<%= invData?.color || '' %>" required>

  <label>Classification</label>
  <select name="classification_id" required>
    <option value="">Choose Classification</option>
    <% classifications.forEach(cls => { %>
      <option 
        value="<%= cls.classification_id %>"
        <%= invData?.classification_id == cls.classification_id ? "selected" : "" %>
      >
        <%= cls.classification_name %>
      </option>
    <% }) %>
  </select>

  <button type="submit">Add Inventory Item</button>
</form>
