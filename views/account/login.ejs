<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div id="loginContainer">
  <form id="loginForm" action="/account/login" method="post">
    <fieldset>
      <label for="email">Email Address:</label>
      <input type="email" name="account_email" id="email" required value="<%= locals.account_email %>">
      <label for="password">Password</label>
      <input type="password" name="account_password" id="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      <div><i>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i></div>
      <div id="pswdBtn">Show Password</div>
      <button type="submit">Login</button>
    </fieldset>
  </form>
  <p>No account? <a href="/account/register">Sign-up</a></p>
</div>
<script src="/js/script.js"></script>